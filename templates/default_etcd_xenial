# Override file for etcd Upstart script providing some environment variables

ETCD_INITIAL_CLUSTER_STATE="new"
ETCD_INITIAL_CLUSTER_TOKEN="{{ etcd_clustername }}"
ETCD_INITIAL_ADVERTISE_PEER_URLS="http://{{ ansible_fqdn }}:2380"
ETCD_INITIAL_CLUSTER="{% for fqdn in groups[etcd_inventory_clustergroup] %}{{ fqdn.split(".")[0] }}=http://{{ hostvars[fqdn][etcd_prod_interface_name]['ipv4']['address'] }}:2380{%- if not loop.last %},{% endif -%}{% endfor %}"

ETCD_NAME="{{ ansible_hostname }}"
ETCD_LISTEN_PEER_URLS="http://{{ ansible_fqdn }}:2380"
ETCD_LISTEN_CLIENT_URLS="http://{{ ansible_fqdn }}:2379,http://127.0.0.1:2379"
ETCD_ADVERTISE_CLIENT_URLS="http://{{ ansible_fqdn }}:2379"

ETCD_DATA_DIR="/var/lib/etcd"
